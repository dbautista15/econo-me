{
	"compilerOptions": {
	  "target": "ES2020",
	  "module": "CommonJS",
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "forceConsistentCasingInFileNames": true,
	  "resolveJsonModule": true,
	  "allowSyntheticDefaultImports": true,
	  "noImplicitAny": false,
	  "strict": false
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "tests"]
  }